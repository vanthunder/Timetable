<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="task.TaskCreatorController">
	<center>
		<VBox prefHeight="400.0" prefWidth="312.0" BorderPane.alignment="CENTER">
			<children>
				<HBox prefHeight="50.0" prefWidth="312.0" spacing="20.0">
					<children>
						<TextField prefWidth="312.0" promptText="Titel">
							<HBox.margin>
								<Insets bottom="20.0" />
							</HBox.margin>
						</TextField>
					</children>
					<VBox.margin>
						<Insets bottom="20.0" />
					</VBox.margin>
					<padding>
						<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
					</padding>
				</HBox>
				<HBox prefHeight="50.0" prefWidth="312.0">
					<children>
						<DatePicker prefHeight="0.0" prefWidth="140.0">
							<padding>
								<Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
							</padding>
							<HBox.margin>
								<Insets left="20.0" right="10.0" />
							</HBox.margin>
						</DatePicker>
						<TextField text="Startzeit">
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" />
							</padding>
							<HBox.margin>
								<Insets right="20.0" />
							</HBox.margin>
						</TextField>
					</children>
				</HBox>
				<HBox prefHeight="50.0" prefWidth="312.0">
					<children>
						<DatePicker prefHeight="0.0" prefWidth="140.0">
							<padding>
								<Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
							</padding>
							<HBox.margin>
								<Insets left="20.0" right="10.0" />
							</HBox.margin>
						</DatePicker>
						<TextField prefWidth="153.0" text="Endzeit">
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" />
							</padding>
							<HBox.margin>
								<Insets right="20.0" />
							</HBox.margin>
						</TextField>
					</children>
				</HBox>
				<HBox prefWidth="180.0">
					<children>
						<TextField fx:id="durationCurrentValue" accessibleRole="SLIDER" onInputMethodTextChanged="#onTextChanged" />
						<Slider fx:id="durationSlider" blockIncrement="0.0" cache="true" majorTickUnit="0.1" max="10.0" minorTickCount="0" onMouseDragReleased="#onSliderChanged" prefHeight="24.0" prefWidth="263.0" showTickMarks="true" snapToTicks="true" value="1.0" />
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</HBox>
			</children>
		</VBox>
	</center>
</BorderPane>
