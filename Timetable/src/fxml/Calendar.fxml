            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="9.0" prefWidth="702.0" />
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="upLeftButton" mnemonicParsing="false" onAction="#urlPress" style="-fx-background-radius: 8; -fx-border-radius: 8;">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Links.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Pane prefHeight="25.0" prefWidth="10.0" />
                  <Label fx:id="timeformat" alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="29.0" prefWidth="212.0" style="-fx-border-color: silver; -fx-border-radius: 10; -fx-background-radius: 10; -fx-alignment: center; -fx-background-color: white;" text="Standart Datumsansicht" textAlignment="CENTER" textFill="#1aafff">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Pane prefHeight="25.0" prefWidth="10.0" />
                  <Button fx:id="upRightButton" mnemonicParsing="false" onAction="#urbPress" style="-fx-background-radius: 8; -fx-border-radius: 8;">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Rechts.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <Pane prefHeight="9.0" prefWidth="702.0" />
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="downLeftButton" mnemonicParsing="false" onAction="#dlbPress" style="-fx-background-radius: 12; -fx-border-radius: 12;">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Links.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Pane prefHeight="25.0" prefWidth="10.0" />
                  <Label fx:id="selectTime" style="-fx-border-color: silver; -fx-border-radius: 10; -fx-alignment: center;" text="  Inhalt  " textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Pane prefHeight="25.0" prefWidth="10.0" />
                  <Button fx:id="downRigtButton" mnemonicParsing="false" onAction="#drbPress" style="-fx-background-radius: 12; -fx-border-radius: 12;">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Rechts.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <Pane prefHeight="9.0" prefWidth="702.0" />
         </children>
      </VBox>
   </top>
