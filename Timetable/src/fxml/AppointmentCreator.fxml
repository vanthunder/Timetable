<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appointment.CreateAppointmentUIController">
   <center>
      <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="400.0" prefWidth="312.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <TextField fx:id="AppointmentTitle" prefWidth="312.0" promptText="Titel">
                     <HBox.margin>
                        <Insets bottom="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox fx:id="AppointmentStartDate" alignment="TOP_CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <DatePicker promptText="Datum" />
                  <TextField fx:id="AppointmentStartTime" promptText="Uhrzeit" />
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <DatePicker fx:id="AppointmentEndDate" promptText="Datum" />
                  <TextField fx:id="AppointmentEndTime" promptText="Uhrzeit" />
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" spacing="80.0">
               <children>
                  <CheckBox fx:id="AppointmentRegularlyOnOff" mnemonicParsing="false" text="regelmäßig" />
                  <ChoiceBox fx:id="AppointmentRegularlyType" disable="true" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" spacing="142.0">
               <children>
                  <CheckBox fx:id="AppointmentAllDay" contentDisplay="CENTER" mnemonicParsing="false" text="ganztägig" />
                  <Button fx:id="AppoinmentPinNote" alignment="CENTER" mnemonicParsing="false" onAction="#appointmentPinNotePress" text="Notiz anheften" />
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <CheckBox fx:id="AppointmentAlarmOnOff" mnemonicParsing="false" text="Alarm">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </CheckBox>
                  <DatePicker fx:id="AppointmentAlarmDate" disable="true" promptText="Datum" />
                  <TextField fx:id="AppointmentAlarmTime" disable="true" promptText="Uhrzeit" />
               </children>
            </HBox>
            <Button fx:id="AppointmentSave" mnemonicParsing="false" onAction="#appointmentSavePress" text="Speichern" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
